<%- include('layouts/header') %>


  
  <div class="container-fluid">
      <div class="row">
        <div
          class="sidebar border border-right col-sm-3 col-md-2 pt-5 mt-5 bg-body-tertiary">
          <div
            class="offcanvas-xm offcanvas-end bg-body-tertiary"
            tabindex="-1"
            id="sidebarMenu"
            aria-labelledby="sidebarMenuLabel">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="sidebarMenuLabel"></h5>
              <!-- <button
                type="button"
                class="btn-close"
                data-bs-dismiss="offcanvas"
                data-bs-target="#sidebarMenu"
                aria-label="Close"></button> -->
            </div>
            <div
              class="offcanvas-body d-md-flex flex-column text-success p-0 pt-lg-3 overflow-y-auto">
              <ul class="nav flex-column">
                <li class="nav-item">
                  <a
                    class="nav-link d-flex align-items-center gap-2 fs-5 active text-success"
                    aria-current="page"
                    href="#">
                    <svg class="bi"><use xlink:href="#house-fill" /></svg>
                    Dashboard
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link d-flex align-items-center gap-2 fs-5 text-success" href="#morning">
                    <svg class="bi"><use xlink:href="#file-earmark" /></svg>
                    Morning Todos
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link d-flex align-items-center gap-2 fs-5 text-success" href="#afternoon">
                    <svg class="bi"><use xlink:href="#cart" /></svg>
                    Afternoon Todos
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link d-flex align-items-center gap-2 fs-5 text-success" href="#night">
                    <svg class="bi"><use xlink:href="#people" /></svg>
                    Night Todos
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link d-flex align-items-center gap-2 fs-5 text-success" href="#exercise">
                    <svg class="bi"><use xlink:href="#graph-up" /></svg>
                    Exercices
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link d-flex align-items-center gap-2 fs-5 text-success" href="#habits">
                    <svg class="bi"><use xlink:href="#puzzle" /></svg>
                    Habits
                  </a>
                </li>
              </ul>

              <hr class="my-3" />

              <ul class="nav flex-column mb-auto">
                <li class="nav-item">
                  <a
                    class="nav-link d-flex align-items-center gap-2 fs-5 text-success"
                    href="/signin">
                    <svg class="bi"><use xlink:href="#door-closed" /></svg>
                    Sign out
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>



        <main class="col-md-9 my-5 py-5 ms-sm-auto col-lg-10 px-md-4">
          <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2 text-success text-center">Welcome <%= userInfo.fname %> <%= userInfo.lname %></h1>
            <div class="btn-toolbar mb-2 mb-md-0">
              <!-- <a
                type="button"
                href="/"
                class="btn btn-lg btn-success px-3 me-1 d-flex align-items-center gap-1">
                Home
              </a> -->
              <a
                type="button"
                href="/edit_todos/<%= userInfo._id %>"
                class="btn btn-lg btn-success px-3 me-1 d-flex align-items-center gap-1">
                Edit
              </a>
              <!-- <form action="/edit" method="post">
                <input type="email" class="py-1 mt-3" placeholder="Enter email" name="email" id="email" required>
                <input
                type="submit"
                name="submit"
                value="Edit Todos"
                class="py-1 btn btn-success btn-lg" />
              </form> -->
              
            </div>
          </div>

          <!-- Todo Lists -->
          <!-- MORNING -->
          <section id="morning">
          <h2 class="py-4">Morning Todo List</h2>
           <div class="table-responsive small">
            <table class="table table-striped table-sm text-center">
              <thead>
                <tr>
                  <th scope="col">4AM - 6AM</th>
                  <th scope="col">6AM - 9AM</th>
                  <th scope="col">9AM - 12PM</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td> <%= userInfo.am4_6 %></td>
                  <td> <%= userInfo.am6_9 %></td>
                  <td> <%= userInfo.am9_12pm %></td>
                </tr> 
              </tbody>
             </table>
            </div>
          </section>
          
            <hr class="my-3 text-success fs-2 fw-bolder" />
          

          <!-- AFTERNOON -->
          <section id="afternoon">
            <h2 class="py-4">Afternoon Todo List</h2>
          <div class="table-responsive small">
            <table class="table table-striped table-sm text-center">
              <thead>
                <tr>
                  <th scope="col">12PM - 3PM</th>
                  <th scope="col">3PM - 6PM</th>
                  <th scope="col">6PM - 9PM</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td> <%= userInfo.pm12_3 %></td>
                  <td> <%= userInfo.pm3_6 %></td>
                  <td> <%= userInfo.pm6_9 %></td>
                </tr>
                
              </tbody>
            </table>

            <hr class="my-3 text-success fs-2 fw-bolder" />
          </div>
          </section>
          

          <!-- NIGHT TODOS -->
          <section id="night">
            <h2 class="py-4">Night Todo List</h2>
            <div class="table-responsive small">
            <table class="table table-striped table-sm text-center">
              <thead>
                <tr>
                  <th scope="col">9PM - 12AM</th>
                  <th scope="col">12AM - 2AM</th>
                  <th scope="col">2AM - 4AM</th>
                </tr>
                </thead>
                <tbody>
                  <tr>
                    <td> <%= userInfo.pm9_12am %></td>
                    <td> <%= userInfo.am12_2 %></td>
                    <td> <%= userInfo.am2_4 %></td>
                  </tr>  
                </tbody>
              </table>

            <hr class="my-3 text-success fs-2 fw-bolder" />
          </div>
          </section>
          
          <!-- EXERCISES -->
          <section id="exercise">
          <h2 class="py-4">Exercises</h2>
          <div class="table-responsive small">
            <table class="table table-striped table-sm text-center">
              <tbody>
                <tr>
                  <td>Walk, Run, Jump</td>
                  <td>Walk, Run, Jump</td>
                  <td>Walk, Run, Jump</td>
                </tr>  
              </tbody>
             </table>
            </div>
          </section>
          
             <!-- HABITS -->
          <section id="habits">
            <h2 class="py-4">Best Habits</h2>
            <div class="table-responsive small">
              <table class="table table-striped table-sm text-center">
                <tbody>
                  <tr>
                    <td>Eat Light, Sleep Well, Avoid Blue Lights</td>
                    <td>Eat Light, Sleep Well, Avoid Blue Lights</td>
                    <td>Eat Light, Sleep Well, Avoid Blue Lights</td>
                  </tr>  
                </tbody>
               </table>
              </div>
             </section>
        </main>
      </div>
    </div>

    <%- include('layouts/footer') %>
  </body>
</html>
